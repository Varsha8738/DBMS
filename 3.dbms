CREATE OR REPLACE TRIGGER trg_log_insert
AFTER INSERT ON employees
FOR EACH ROW
BEGIN
    INSERT INTO employee_log (emp_name, action_date)
    VALUES (:NEW.name,¬†SYSDATE);
END;
